<h1>My events by status</h1>
<% if @my_events_by_status.blank? %>
  <p>
    &mdash; You have not added any events &mdash;
  </p>
<% else %>
  <%# TODO reuse table formatting from overview page %>
  <% MyEvent::STATUSES.each do |status| %>
    <% next if @my_events_by_status[status].blank? -%>
    <h3>
      <%= MyEvent.status_label_for(status) %>
    </h3>
    <ul>
      <% @my_events_by_status[status].each do |event| %>
        <li>
          <%= link_to cleanse(event.title), event_path(event) %>
          &mdash;
          <%= normalize_time(event) %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
